<% include partials/header %>
<div class="container">
  <div class="row">
    <div class="col-md-5 mx-auto" style="margin-top:80px;">
      <form action="/register" method="post">
        <h1 class="mx-auto mb-3 text-center">Join Us</h1>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="username"
            placeholder="Username"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="password"
            name="password"
            placeholder="Password"
          />
        </div>
        <div class="form-group ">
          <button class="btn btn-info btn-block">Join</button>
        </div>
        <a href="/campgrounds" class="btn btn-primary">Back</a>
      </form>
    </div>
  </div>
</div>

<% include partials/footer%>
