<% include ../partials/header %>
<div class="container">
  <div class="row">
    <div class="col-md-5 mx-auto" style="margin-top:80px;">
      <form
        action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT"
        method="post"
      >
        <h2 class="mx-auto mb-3 text-center">Edit Comment</h2>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="comment[text]"
            value="<%=comment.text%>"
          />
        </div>
        <div class="form-group">
          <button class="btn btn-info btn-block" name="button">Update</button>
        </div>
        <a href="/campgrounds" class="btn btn-primary">Back</a>
      </form>
    </div>
  </div>
</div>

<% include ../partials/footer%>
