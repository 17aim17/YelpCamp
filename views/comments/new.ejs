<% include ../partials/header %>
<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto" style="margin-top:80px;">
      <form action="/campgrounds/<%=campground._id%>/comments" method="post">
        <h3 class="mx-auto mb-3 text-center">
          Add new Comment to <%=campground.name%>
        </h3>

        <div class="form-group">
          <textarea name="comment[text]" id="" cols="30" rows="10"></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-info btn-block" name="button">Submit</button>
        </div>
        <a href="/campgrounds" class="btn btn-primary">Back</a>
      </form>
    </div>
  </div>
</div>

<script src="//cdn.ckeditor.com/4.11.4/standard/ckeditor.js"></script>
<script>
  CKEDITOR.replace('comment[text]');
</script>

<% include ../partials/footer%>