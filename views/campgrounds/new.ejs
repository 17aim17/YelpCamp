<% include ../partials/header %>
 <div class="container">
      <form  action="/campgrounds" method="post">
        <h1 style="text-align:center ; margin-top:1rem">Create new Campground</h1>
        <div style="width:30%  ;margin : 1.5rem auto">
          <div class="form-group">
            <input class="form-control" type="text" name="name" value="" placeholder="Name">
          </div>
          <div class="form-group">
            <input class="form-control" type="number" name="price" value="" placeholder="Price"  min="0.01" step="0.01" >
          </div>
          <div class="form-group ">
            <input class="form-control " type="text" name="image" value="" placeholder="Image Url">
          </div>
          <div class="form-group ">
            <input class="form-control " type="text" name="description" value="" placeholder="Description">
          </div>
          <div class="form-group">
            <button class="btn btn-info btn-block" name="button">Submit</button>
          </div>
          <a href="/campgrounds" class="btn btn-primary">Back</a>
        </div>
      </form>
 </div>

<% include ../partials/footer%>
