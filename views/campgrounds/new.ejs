<% include ../partials/header %>
<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto" style="margin-top:80px;">
      <form action="/campgrounds" method="post">
        <h2 class="mx-auto mb-3 text-center">
          Create new Campground
        </h2>
        <div class="form-group">
          <input class="form-control" type="text" name="name" value="" placeholder="Name" />
        </div>
        <div class="form-group">
          <input class="form-control" type="number" name="price" value="" placeholder="Price" min="0.01" step="0.01" />
        </div>
        <div class="form-group ">
          <input class="form-control " type="text" name="image" value="" placeholder="Image Url" />
        </div>
        <div class="form-group ">
          <textarea class="form-control " placeholder="Description" name="description"> </textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-info btn-block" name="button">Submit</button>
        </div>
        <a href="/campgrounds" class="btn btn-primary">Back</a>
      </form>
    </div>
  </div>
</div>


<script src="//cdn.ckeditor.com/4.11.4/standard/ckeditor.js"></script>
<script>
  CKEDITOR.replace('description');
</script>
<% include ../partials/footer%>