<% include ../partials/header %>
  <div class="container">
    <header class="jumbotron mt-3 p-4">
      <h1 class="display-4">Welcome to YelpCamp</h1>
      <p>View our handpicked campgrounds from all around the world</p>
      <p>
        <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new Campground</a>
      </p>
    </header>
    <div class="row text-center" >
   <% campgrounds.forEach(function(campground){ %>
      <div class="col-md-3 col-sm-6">
        <div class="card mt-4">
            <img class="img-fluid" src="<%=campground.image%>" alt="image">
            <div class="">
              <h5 class="card-title"><%=campground.name%> </h5>
            </div>
            <p> <a href="/campgrounds/<%=campground._id%>" class="btn btn-info btn-sm">More Info</a></p>
        </div>
      </div>
   <% }); %>
  </div>
</div>
<% include ../partials/footer %>
