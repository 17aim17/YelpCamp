<% include ../partials/header %>

<style>
  .header {
    width: 100%;
    min-height: 50vh;
    background-attachment: fixed;
    background-size: cover;
    background-position: center;
    background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)),
      url('https://images.pexels.com/photos/97050/pexels-photo-97050.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940');
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    flex-direction: column;
    word-break: keep-all;
    margin-top: 50px;
  }
</style>

<header class="header jumbotron">
  <div class="container" style=" padding: 2rem 0;">
    <h1>Welcome to YelpCamp</h1>
    <p class="blockquote">
      View our handpicked campgrounds from all around the world
    </p>
    <p>
      <a class="btn btn-danger btn-lg" href="/campgrounds/new"
        >Add new Campground</a
      >
    </p>
  </div>
</header>
<div class="container" style="margin-top:40px;">
  <div class="row text-center">
    <% campgrounds.forEach(function(campground){ %>
    <div class="col-md-3 col-sm-6">
      <div class="card mt-4">
        <img class="img-fluid" src="<%=campground.image%>" alt="image" />
        <div class="card-body">
          <h5 class="card-title"><%=campground.name%></h5>
        </div>
        <p>
          <a href="/campgrounds/<%=campground._id%>" class="btn btn-info btn-sm"
            >More Info</a
          >
        </p>
      </div>
    </div>
    <% }); %>
  </div>
</div>
<% include ../partials/footer %>
